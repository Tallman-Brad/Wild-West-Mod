<wildwestmod>

	<!-- Wasteland -->

	<set xpath="/entitygroups/entitygroup[@name='ZombiesWasteland']">
		<entity name="zombieWendigoRadiatedShower" prob="0.8"/>
		<entity name="zombieBurnt" prob="3"/>
		<entity name="zombieBurntFeral" prob="2"/>
		<entity name="zombieBurntRadiated" prob="1"/>		
		<entity name="zombieWightFeral" prob="1.5"/>
		<entity name="zombieWightRadiated" prob="1"/>
		<entity name="zombieSoldier" prob="2"/>
		<entity name="zombieSoldierFeral" prob="1.5"/>
		<entity name="zombieSoldierRadiated" prob="1"/>
		<entity name="zombieMutated" prob="2"/>
		<entity name="zombieMutatedFeral" prob="1.5"/>
		<entity name="zombieMutatedRadiated" prob="1.5"/>
		<entity name="zombieSpider" prob="2"/>	
		<entity name="zombieSpiderFeral" prob="1.5"/>
		<entity name="zombieSpiderRadiated" prob="1"/>
		<entity name="zombieDemolition" prob="0.8"/>
		<entity name="zombieWightFeralGunslinger" prob="0.8"/>
		<entity name="zombieWightRadiatedGunslinger" prob="0.5"/>
		<entity name="zombieFemaleFatBarker" prob="0.8"/>
		<entity name="zombieFemaleBigFatBarker" prob="0.5"/>
		<entity name="guppyVultureBurnt" prob="1.2"/>		
		<entity name="guppyMommaVultureBurnt" prob="0.8"/>
		<entity name="guppyRadiatedMommaVultureBurnt" prob="0.5"/>		
	</set>

	<set xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNight']">
		<entity name="zombieWendigoRadiatedShower" prob="0.8"/>
		<entity name="zombieBurnt" prob="3"/>
		<entity name="zombieBurntFeral" prob="2"/>
		<entity name="zombieBurntRadiated" prob="1"/>		
		<entity name="zombieWightFeral" prob="1.5"/>
		<entity name="zombieWightRadiated" prob="1"/>
		<entity name="zombieSoldier" prob="2"/>
		<entity name="zombieSoldierFeral" prob="1.5"/>
		<entity name="zombieSoldierRadiated" prob="1"/>
		<entity name="zombieMutated" prob="2"/>
		<entity name="zombieMutatedFeral" prob="1.5"/>
		<entity name="zombieMutatedRadiated" prob="1.5"/>
		<entity name="zombieSpider" prob="2"/>	
		<entity name="zombieSpiderFeral" prob="1.5"/>
		<entity name="zombieSpiderRadiated" prob="1"/>
		<entity name="zombieDemolition" prob="0.8"/>
		<entity name="zombieWightFeralGunslinger" prob="0.8"/>
		<entity name="zombieWightRadiatedGunslinger" prob="0.5"/>
		<entity name="zombieFemaleFatBarker" prob="0.8"/>
		<entity name="zombieFemaleBigFatBarker" prob="0.5"/>
		<entity name="guppyVultureBurnt" prob="1.2"/>		
		<entity name="guppyMommaVultureBurnt" prob="0.8"/>
		<entity name="guppyRadiatedMommaVultureBurnt" prob="0.5"/>		
	</set>	
	
	<append xpath="/entitygroups/entitygroup[@name='EnemyAnimalsWasteland']">
		<entity name="animalZombieWastelandCraterBear" prob="7"/>
		<entity name="animalBossGrace" prob="5"/>
		<entity name="animalZombieLargeVulture" prob="5"/>		
	</append>
	
	<!-- Desert -->

	<append xpath="/entitygroups/entitygroup[@name='EnemyAnimalsDesert']">
		<entity name="guppyMommaVultureBurnt" prob="4"/>	
		<entity name="animalDesertHare" prob="7"/> <!-- A timid animal but desert enemy group is appropriate -->
		<entity name="ZombieUndertakerWildWest" prob="2"/> <!-- An entity but desert specific -->
		<entity name="ZombieHammerSpammerWildWest" prob="2"/> <!-- An entity but desert specific -->
		<entity name="guppyVultureBurnt" prob="15"/>		
	</append>
	
	<!-- Snow -->
	
	<append xpath="/entitygroups/entitygroup[@name='EnemyAnimalsSnow']">
		<entity name="animalWildWestSnowBear" prob="3"/>
		<entity name="animalWolf" prob="13"/>
		<entity name="animalSnowHare" prob="13"/> <!-- A timid animal but snow enemy group is appropriate -->
		<entity name="zombieWendigo" prob="1"/>	 <!-- An entity but snow specific -->	
	</append>

	<set xpath="/entitygroups/entitygroup[@name='EnemyAnimalsSnow']/entity[@name='animalMountainLion']/@prob">7</set><!-- default 25 -->
	<set xpath="/entitygroups/entitygroup[@name='EnemyAnimalsSnow']/entity[@name='animalBear']/@prob">7</set><!-- default 10 -->
	
	<!-- Forest -->
	
	<set xpath="/entitygroups/entitygroup[@name='WildGameForest']/entity[@name='animalRabbit']/@prob">30</set><!-- default 48 -->
	<set xpath="/entitygroups/entitygroup[@name='WildGameForest']/entity[@name='animalChicken']/@prob">30</set><!-- default 48 -->
	<set xpath="/entitygroups/entitygroup[@name='WildGameForest']/entity[@name='animalBoar']/@prob">2</set><!-- default 1 -->
	<set xpath="/entitygroups/entitygroup[@name='WildGameForest']/entity[@name='animalStag']/@prob">3</set><!-- default 1 -->
	<set xpath="/entitygroups/entitygroup[@name='WildGameForest']/entity[@name='animalDoe']/@prob">4</set><!-- default 1 -->
	
	<!-- Custom Groups -->

	<append xpath="/entitygroups">	
	<entitygroup name="animalZombieWastelandCraterBear">
		<entity name="animalZombieWastelandCraterBear" />
	</entitygroup>
	
	<entitygroup name="WastelandCraterBearGroup">
		<entity name="animalZombieWastelandCraterBear"/>
	</entitygroup>
	</append>	

</wildwestmod>